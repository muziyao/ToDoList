<view class="page" xmlns:wx="http://www.w3.org/1999/xhtml">
    <view class="page__hd">
    <view class="content">
        <view class="page__title">用户登录 </view>
    </view>
    </view>
    <view class="page__bd">
        <view class="weui-toptips weui-toptips_warn" wx:if="{{showTopTips}}">错误提示</view>


        <view class="weui-cells__title">表单</view>
        <view class="weui-cells weui-cells_after-title">
            <view class="weui-cell ">
                <view class="weui-cell__hd">
                    <view class="weui-label">用户名</view>
                </view>
                <view class="weui-cell__bd">
                    <input class="weui-input" placeholder="请输入用户名" bindinput="setName"/>
                </view>
            </view>
            <view class="weui-cell">
                <view class="weui-cell__hd">
                    <view class="weui-label">密码</view>
                </view>
                <view class="weui-cell__bd">
                    <input class="weui-input" type="password" placeholder="请输入密码" bindinput="setPassword"/>
                </view>
            
            </view>
            
        </view>
        <view class="weui-cells__tips" bindtap="toRegister">没有账号？点击注册</view>


        <view class="weui-btn-area">
            <button class="weui-btn" type="primary" bindtap="checkLogin">确定</button>
        </view>
    </view>
</view>

    <view class="wechat-login">
        <image class="wechat-logo" mode="widthFix" src="/images/icon/wechat.png"></image>
        <text class="wechat-text">微信登录</text>
    </view>
